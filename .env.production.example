# Variables de Entorno - Ajustar según tu infraestructura AWS

# Base de Datos Aurora RDS
, 

# Flask
SECRET_KEY=genera-una-clave-super-secreta-aqui-con-50-caracteres-minimo
FLASK_ENV=production
FLASK_DEBUG=False

# Servidor
HOST=0.0.0.0
PORT=5500

# WebSocket
SOCKETIO_ASYNC_MODE=threading
SOCKETIO_PING_TIMEOUT=60
SOCKETIO_PING_INTERVAL=25

# CORS - En producción, especificar dominios permitidos
CORS_ORIGINS=https://tu-usuario.github.io,https://tu-dominio.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/carrito-iot/app.log

# AWS (si usas servicios adicionales)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key

# Timezone
TZ=America/Mexico_City

